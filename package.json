{
  "name": "lutingsyntax",
  "displayName": "LutingInVSCode",
  "description": "Extension to write and modify lutings in VSCode using the .lute file format.",
  "icon": "./luting.png",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "luting",
        "extensions": [".lute"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./luting.png",
          "dark": "./luting.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "luting",
        "scopeName": "source.luting",
        "path": "./syntaxes/lutingSyntax.json"
      }
    ],
    "themes": [
      {
        "label": "Luting extension",
        "uiTheme": "vs-dark",
        "path": "./modifiedOneDarkProMix.json"
      }
    ],
    "commands": [
      {
        "command": "lutingsyntax.printTokens",
        "title": "Luting: Print all tokens"
      },
      {
        "command": "lutingsyntax.fwbwtokenize",
        "title": "Luting: Tokenize and back your luting."
      },
      {
        "command": "lutingsyntax.expandDefinitions",
        "title": "Luting: Expand all defined letters into the full sections"
      },
      {
        "command": "lutingsyntax.testCommand",
        "title": "Luting: Execute test command"
      },
      {
        "command": "lutingsyntax.finalize",
        "title": "Luting: Finalize your luting!"
      },
      {
        "command": "lutingsyntax.expandDefsAndTimings",
        "title": "Luting: Expand all definitions and timings!"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AnAnnoyingCat/lutingsyntax"
  }
}
