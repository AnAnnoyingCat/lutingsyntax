{
	"name": "lutingsyntax",
	"scopeName": "source.luting",
	"fileTypes": [".lute"],
	"patterns": [
	  {
		"name": "instrument",
		"match": "i\\w"
	  },
	  {
		"name": "octave",
		"match": "o\\d"
	  },
	  {
		"name": "volume",
		"match": "v\\d"
	  },
	  {
		"name": "side",
		"match": "s\\d"
	  },
	  {
		"name": "fraction",
		"match": "(?:\\d+/\\d+|\\d+|/\\d+)"
	  },
	  {
		"name": "note",
		"match": "[a-g]'?|r",
		"patterns":[
			{
				"include": "fraction"
			}
		]
	  },
	  {
		"name": "time",
		"match": "t",
		"patterns":[
			{
				"include": "fraction"
			}
		]
	  },
	  {
		"name": "start-definition",
		"match": "[A-Z]\\{"
	  },
	  {
		"name": "end-definition",
		"match": "\\}\\d*"
	  },
	  {
	  	"name": "predefined-section",
	  	"match": "[A-Z]\\d*"
	  },
	  {
		"name": "newVoice",
		"match": "\\|"
	  },
	  {
		"name": "octaveChange",
		"match": "<|>"
	  },
	  {
		"name": "lutingheader",
		"match": "#lute ?m? ?[0-9]*"
	  },
	  {
		"name": "chord",
		"begin": "\\(",
		"end": "\\)",
		"patterns": [
			{
				"name": "chordnote",
				"match": "[^)]"
			}
		]
	  },
	  {
		"name": "comment",
		"begin": "//",
		"end": "//|\\n",
		"patterns": [
			{
				"name": "commentContent",
				"match": "!(\\/\\/|\\\n)"
			}
		]
	  }
	]
  }
  